<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/fish_item_photo"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fish_item_photo"
            android:layout_toRightOf="@+id/fish_item_photo"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:padding="5dip" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nazwa ryby"
                android:textStyle="bold"
                android:typeface="sans" />
            
              <TextView
                android:id="@+id/my_records_list_data_and_places"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nazwa ryby"/>
              
               <TextView
                android:id="@+id/my_records_list_length_and_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nazwa ryby"/>
            
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>